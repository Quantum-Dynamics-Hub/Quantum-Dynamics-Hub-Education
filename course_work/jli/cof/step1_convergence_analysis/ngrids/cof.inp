 &GLOBAL
   PRINT_LEVEL  MEDIUM
   PROJECT_NAME COF
   RUN_TYPE  ENERGY
   !For huge cutoff this keyword is required
   EXTENDED_FFT_LENGTHS .TRUE.
 &END GLOBAL

 &FORCE_EVAL
   METHOD  QS

   &DFT 
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL 
    MULTIPLICITY 1

    &MGRID
     NGRIDS 14
     CUTOFF 1000
    REL_CUTOFF 60
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.000E-14
    &END QS
    &POISSON
      PERIODIC NONE 
      POISSON_SOLVER ANALYTIC
    &END

    &SCF
      &DIAGONALIZATION 
        ALGORITHM DAVIDSON
      &END

      &SMEAR
        METHOD FERMI_DIRAC
      &END

      &MIXING
        ALPHA 0.3
        METHOD BROYDEN_MIXING
        NBROYDEN 8
      &END MIXING

      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      MAX_SCF  1
      ADDED_MOS 50
      ! Only in case you need outer scf for convergence
      !&OUTER_SCF  T
      !  EPS_SCF    1.0E-06
      !  MAX_SCF 20
      !&END OUTER_SCF
    &END SCF

    &XC
      &XC_FUNCTIONAL
         &PBE
         &END PBE
      &END XC_FUNCTIONAL
      ! In CP2K versions lower than v7, this part is required for TDDFT calculations
      &XC_GRID
        XC_DERIV SPLINE2_SMOOTH
      &END XC_GRID
      &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL 
         &PAIR_POTENTIAL
            PARAMETER_FILE_NAME dftd3.dat
            TYPE DFTD3
            REFERENCE_FUNCTIONAL PBE
         &END
      &END VDW_POTENTIAL
    &END XC
    &PRINT
      &MULLIKEN OFF
      &END
      &HIRSHFELD OFF
      &END
      &MO_CUBES
        NHOMO 3
        NLUMO 3
        ! If the it is set to .TRUE. or T, it will print out the cube files
        ! In this case it will only print all the HOMO energies and 3 LUMO energies
        WRITE_CUBE F
      &END
      &PDOS
        APPEND      .TRUE.
        COMPONENTS  .TRUE.
        NLUMO -1
      &END PDOS
    &END PRINT
  &END DFT

  &SUBSYS  
    &CELL
    A  23.01504              0                0              
    B -12.3164073652008     20.1158047946615  0              
    C  -0.363649935235012    0.26423684160044 38.8413789644053
      PERIODIC  XYZ
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME cof.xyz
      COORD_FILE_FORMAT XYZ
      ! Only in case you use cif file
      !&GENERATE
      !  REORDER T
      !&END
    &END

    &KIND H
      BASIS_SET  DZVP-MOLOPT-GTH 
      POTENTIAL  GTH-PBE-q1
    &END KIND
    &KIND C 
      BASIS_SET  DZVP-MOLOPT-GTH 
      POTENTIAL  GTH-PBE-q4
    &END KIND
    &KIND N
      BASIS_SET  DZVP-MOLOPT-GTH 
      POTENTIAL  GTH-PBE-q5
    &END KIND
    &KIND B
      BASIS_SET  DZVP-MOLOPT-SR-GTH
      POTENTIAL  GTH-PBE-q3
    &END KIND
    &KIND S
      BASIS_SET  DZVP-MOLOPT-GTH
      POTENTIAL  GTH-PBE-q6
    &END KIND
  &END SUBSYS
 &END FORCE_EVAL


